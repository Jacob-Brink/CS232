#include "path.h"
#include "sys_command.h"
#include <unistd.h>

SysCommand::SysCommand(char** args, bool blocking): Command({0}, args, blocking) {
  
}

bool SysCommand::isValidCount(int count) {
  return count >= 1;
}

void SysCommand::run(char** args) {
  string commandName = args[0];
  Path path = Path();

  int dir = path.find(commandName);

  if (dir == -1) {
    cout << "No such program was found" << endl;
  }

  string directory = path.getDirectory(dir);

  int success = execve((directory + commandName).c_str(), args, NULL)
  
}
